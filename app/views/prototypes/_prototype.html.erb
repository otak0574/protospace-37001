<div class="card">
  <% if prototype.image.attached?%>
  <%# <%= link_to image_tag, prototype.image.variant(resize: '500x500'), prototype_path ,class: :card__img %>
  <%= link_to image_tag(prototype.image.variant(resize: '500x500')), prototype_path(prototype), class: :card__img %>

  <% end %>
  <div class="card__body">
    <%= link_to "#{prototype.title}", prototype_path(prototype.id), class: :card__title%>
    <p class="card__summary">
      <%= prototype.catch_copy %>
    </p>
    <%= link_to "by#{prototype.user.name}", user_path(prototype.user_id), class: :card__user %>
  </div>
</div>